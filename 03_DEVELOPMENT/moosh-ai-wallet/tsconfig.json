{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    
    // Modules
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    
    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "importsNotUsedAsValues": "error",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    
    // JavaScript Support
    "allowJs": false,
    "checkJs": false,
    
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    
    // Projects
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    
    // Completeness
    "skipLibCheck": true,
    
    // Output
    "outDir": "./dist",
    "rootDir": "./",
    
    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@moosh/core": ["packages/core/src"],
      "@moosh/core/*": ["packages/core/src/*"],
      "@moosh/bitcoin": ["packages/bitcoin/src"],
      "@moosh/bitcoin/*": ["packages/bitcoin/src/*"],
      "@moosh/lightning": ["packages/lightning/src"],
      "@moosh/lightning/*": ["packages/lightning/src/*"],
      "@moosh/spark": ["packages/spark/src"],
      "@moosh/spark/*": ["packages/spark/src/*"],
      "@moosh/ui": ["packages/ui/src"],
      "@moosh/ui/*": ["packages/ui/src/*"],
      "@moosh/security": ["packages/security/src"],
      "@moosh/security/*": ["packages/security/src/*"],
      "@moosh/ai": ["packages/ai/src"],
      "@moosh/ai/*": ["packages/ai/src/*"],
      "@moosh/bitcoin-assets": ["packages/bitcoin-assets/src"],
      "@moosh/bitcoin-assets/*": ["packages/bitcoin-assets/src/*"],
      "@moosh/compliance": ["packages/compliance/src"],
      "@moosh/compliance/*": ["packages/compliance/src/*"],
      "@moosh/blockchain": ["packages/blockchain/src"],
      "@moosh/blockchain/*": ["packages/blockchain/src/*"],
      "@moosh/db": ["packages/db/src"],
      "@moosh/db/*": ["packages/db/src/*"],
      "@moosh/api": ["packages/api/src"],
      "@moosh/api/*": ["packages/api/src/*"],
      "@moosh/crypto-wasm": ["packages/crypto-wasm/pkg"],
      "@moosh/crypto-wasm/*": ["packages/crypto-wasm/pkg/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    ".next",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [
    { "path": "./apps/web" },
    { "path": "./apps/extension" },
    { "path": "./apps/mobile" },
    { "path": "./packages/core" },
    { "path": "./packages/bitcoin" },
    { "path": "./packages/lightning" },
    { "path": "./packages/spark" },
    { "path": "./packages/ui" },
    { "path": "./packages/security" },
    { "path": "./packages/ai" },
    { "path": "./packages/bitcoin-assets" },
    { "path": "./packages/compliance" },
    { "path": "./packages/blockchain" },
    { "path": "./packages/db" },
    { "path": "./packages/api" }
  ]
} 